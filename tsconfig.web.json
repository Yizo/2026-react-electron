{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/preload/**/*",
    "src/constants/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["src/constants/*"],
      "@constants": ["src/constants/index.ts"],
      "@/*": ["src/renderer/src/*"]
    }
  }
}
